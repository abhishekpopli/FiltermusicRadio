<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="filtermusic.net"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--used for keeping the processor from sleeping-->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!--used for hockey-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".FiltermusicApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/filtemusic_logo"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.TabsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <activity android:name=".ui.details.RadioDetailActivity"/>
        <service
            android:name=".player.MediaPlayerService">
        </service>

        <receiver android:name=".player.MusicIntentReceiver">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY"/>
            </intent-filter>
        </receiver>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="1138d972ebce1d6dd304d99a658e1cac40517d47"/>
    </application>


</manifest>
